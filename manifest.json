{
	"name": "darkerQuantum",
	"applications": {
		"gecko": {
			"id": "darkerQuantum@oyana.org"
		}
	},
	"description": "Firefox Quantum darker theme for UI & website",
	"homepage_url": "https://github.com/Oyana/darkerQuantum",
	"manifest_version": 2,
	"version": "0.0.2",
	"browser_action": {
		"default_icon": "img/ico.png",
		"default_title": "darkerQuantum option"
	},
	"icons": {
		"48": "img/ico.png"
	},
	"permissions": [
		"*://*.google.fr/*",
		"*://*.google.com/*",
		"*://*.github.com/*",
		"alarms",
		"activeTab",
		"tabs",
		"topSites",
		"storage",
		"theme"
	],
	"background": {
		"scripts": ["js/background.js"]
	},
	"chrome_url_overrides": {
		"newtab": "html/nwetab.html"
	},
	"options_ui": {
		"page": "html/options.html",
		"browser_style": true
	}
}
